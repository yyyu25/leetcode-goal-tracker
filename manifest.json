{
  "manifest_version": 3,
  "name": "LeetCode Goal Tracker",
  "version": "1.3.1",
  "description": "Shows your LeetCode solved progress for today, week, and month.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://*.leetcode.com/*", "https://leetcode.com/*"],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_title": "LeetCode Goal Tracker",
    "default_popup": "leetcode-goal-popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.leetcode.com/*", "https://leetcode.com/*"],
      "js": ["leetcode-goal-content.js"],
      "run_at": "document_idle"
    }
  ]
}
